{{#if user}}

  <form class="form-signin" action="/streamers/" method="POST">
    <h1 class="h3 mb-3 font-weight-normal">Please input your favorite</h1>
    <label for="inputStreamer" class="sr-only">Twitch streamer name</label>
    <input type="text" id="inputStreamer" name="streamer" class="form-control" placeholder="Twitch streamer name" required autofocus>
      <div class="checkbox mb-3">
      </div>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Start</button>
  </form>

{{/if}}
